@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "إدارة الأدوار";
    Layout = "_Layout";
}

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-user-tag"></i> @ViewData["Title"]
        </h5>
    </div>

    <div class="card-body">
        <!-- رسائل التنبيه -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        <!-- أزرار التحكم -->
        <div class="mb-3 d-flex gap-2">
            <a  asp-controller="Roles" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> إضافة دور
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> رجوع
            </a>
        </div>

        <!-- جدول الأدوار -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>إسم الدور</th>
                        <th>المعرف (ID)</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>@role.Id</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a  asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                    <a asp-action="Permissions" asp-route-id="@role.Id" class="btn btn-info text-white">
                                        <i class="fas fa-key"></i> الصلاحيات
                                    </a>
                                    <form  asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@role.Id" />
                                        <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('هل أنت متأكد من حذف هذا الدور؟')">
                                            <i class="fas fa-trash"></i> حذف
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
