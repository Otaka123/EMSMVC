@model LoginRequest

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        تسجيل الدخول
                    </h3>
                </div>
                <div class="card-body p-4">

                    <!-- عرض رسائل النجاح -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- عرض رسائل الخطأ -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form  asp-controller="Users" asp-action="Login" method="post" id="loginForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="UserNameOrEmailOrPhone" class="form-label">
                                <i class="fas fa-user me-2"></i>اسم المستخدم / البريد الإلكتروني / الهاتف
                            </label>
                            <input asp-for="UserNameOrEmailOrPhone" class="form-control"
                                   placeholder="أدخل اسم المستخدم أو البريد الإلكتروني أو رقم الهاتف" />
                            <span asp-validation-for="UserNameOrEmailOrPhone" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>كلمة المرور
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control"
                                       id="passwordInput" placeholder="أدخل كلمة المرور" />
                                <button type="button" class="btn btn-outline-secondary"
                                        id="togglePassword">
                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">تذكرني</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="loginButton">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                تسجيل الدخول
                                <span class="spinner-border spinner-border-sm d-none" id="loadingSpinner"></span>
                            </button>
                        </div>

                        @* <div class="text-center mt-3">
                            <a href="@Url.Action("ForgotPassword", "User")" class="text-decoration-none">
                                <i class="fas fa-key me-1"></i>نسيت كلمة المرور؟
                            </a>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-2">ليس لديك حساب؟</p>
                            <a href="@Url.Action("Register", "User")" class="btn btn-outline-success">
                                <i class="fas fa-user-plus me-2"></i>إنشاء حساب جديد
                            </a>
                        </div> *@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
    <script>
        $(document).ready(function () {
            // إظهار/إخفاء كلمة المرور
            $('#togglePassword').click(function () {
                const passwordInput = $('#passwordInput');
                const eyeIcon = $('#eyeIcon');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    eyeIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    eyeIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // إدارة حالة زر التسجيل
            $('#loginForm').submit(function () {
                const loginButton = $('#loginButton');
                const loadingSpinner = $('#loadingSpinner');

                loginButton.prop('disabled', true);
                loadingSpinner.removeClass('d-none');
                loginButton.find('i').addClass('d-none');
            });

            // التحقق من صحة النموذج في الوقت الحقيقي
            $('input').on('input', function () {
                const form = $('#loginForm');
                const isValid = form[0].checkValidity();

                if (isValid) {
                    $('#loginButton').prop('disabled', false);
                } else {
                    $('#loginButton').prop('disabled', true);
                }
            });

            // إظهار رسائل التحقق من الصحة
            if ($('.field-validation-error').length > 0) {
                $('.field-validation-error').each(function () {
                    $(this).closest('.mb-3').find('input').addClass('is-invalid');
                });
            }

            // إضافة تأثيرات للعناصر
            $('.form-control').focus(function () {
                $(this).closest('.mb-3').find('label').addClass('text-primary');
            }).blur(function () {
                $(this).closest('.mb-3').find('label').removeClass('text-primary');
            });
        });
    </script>

    <style>
        .card {
            border: none;
            border-radius: 15px;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
            border: none;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            }

        .btn {
            border-radius: 10px;
            padding: 12px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.4);
            }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .input-group-text {
            border-radius: 0 10px 10px 0;
        }

        .text-primary {
            font-weight: 600;
        }

        /* تأثيرات للهواتف المحمولة */
        @@media (max-width: 768px) {
            .container {
                padding: 10px;
            }

            .card {
                margin: 10px;
            }
        }
    </style>
}