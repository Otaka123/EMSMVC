@model ManageUserRolesDTO
@{
    ViewData["Title"] = "إدارة أدوار المستخدم: " + Model.UserFullName;
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-user-shield"></i> @ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form  asp-action="ManageRoles" asp-controller="Users" method="post">
            <input type="hidden" asp-for="UserId" />

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- معلومات المستخدم -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded">
                        <h6><i class="fas fa-user"></i> معلومات المستخدم</h6>
                        <p><strong>الاسم:</strong> @Model.UserFullName</p>
                        <p><strong>البريد الإلكتروني:</strong> @Model.UserEmail</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded">
                        <h6><i class="fas fa-list"></i> الأدوار الحالية</h6>
                        @if (Model.UserRoles.Any())
                        {
                            foreach (var role in Model.UserRoles)
                            {
                                <span class="badge bg-success me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">لا توجد أدوار</span>
                        }
                    </div>
                </div>
            </div>

            <!-- اختيار الأدوار -->
            <div class="row">
                <div class="col-md-12">
                    <h6 class="border-bottom pb-2">
                        <i class="fas fa-tasks"></i> إدارة الأدوار
                    </h6>

                    <!-- أزرار التحكم -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-outline-primary btn-sm" id="selectAllBtn">
                            <i class="fas fa-check-square"></i> تحديد الكل
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="deselectAllBtn">
                            <i class="fas fa-times-circle"></i> إلغاء تحديد الكل
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" id="selectCurrentBtn">
                            <i class="fas fa-redo"></i> تحديد الأدوار الحالية
                        </button>
                    </div>

                    <!-- البحث -->
                    <div class="mb-3">
                        <input type="text" id="roleSearch" class="form-control" placeholder="بحث في الأدوار...">
                    </div>

                    <!-- قائمة الأدوار -->
                    <div class="roles-container">
                        <div class="row">
                            @foreach (var role in Model.AllRoles.OrderBy(r => r.Name))
                            {
                                <div class="col-md-4 mb-3 role-item">
                                    <div class="card role-card @(Model.UserRoles.Contains(role.Name) ? "border-success" : "")">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input role-checkbox"
                                                       type="checkbox"
                                                       name="SelectedRoles"
                                                       value="@role.Name"
                                                       id="role_@role.Id"
                                                       @(Model.SelectedRoles.Contains(role.Name) ? "checked" : "") />
                                                <label class="form-check-label w-100" for="role_@role.Id">
                                                    <strong class="role-name">@role.Name</strong>
                                                    <br />
                                                    <small class="text-muted">ID: @role.Id</small>
                                                    @if (Model.UserRoles.Contains(role.Name))
                                                    {
                                                        <span class="badge bg-success float-end">مفعل</span>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!Model.AllRoles.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> لا توجد أدوار متاحة في النظام
                        </div>
                    }
                </div>
            </div>

            <!-- أزرار الإجراء -->
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> حفظ التغييرات
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> رجوع للقائمة
                </a>
                @* <a href="@Url.Action("Details", new { id = Model.UserId })" class="btn btn-info">
                    <i class="fas fa-eye"></i> عرض تفاصيل المستخدم
                </a> *@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // تحديد/إلغاء تحديد الكل
        document.getElementById('selectAllBtn').addEventListener('click', function() {
            var checkboxes = document.querySelectorAll('.role-checkbox');
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = true;
            });
            updateCardStyles();
        });

        document.getElementById('deselectAllBtn').addEventListener('click', function() {
            var checkboxes = document.querySelectorAll('.role-checkbox');
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = false;
            });
            updateCardStyles();
        });

        document.getElementById('selectCurrentBtn').addEventListener('click', function() {
            var checkboxes = document.querySelectorAll('.role-checkbox');
            checkboxes.forEach(function(checkbox) {
                var roleName = checkbox.value;
                var isCurrent = @Html.Raw(Json.Serialize(Model.UserRoles));
                checkbox.checked = isCurrent;
            });
            updateCardStyles();
        });

        // البحث في الأدوار
        document.getElementById('roleSearch').addEventListener('keyup', function() {
            var searchText = this.value.toLowerCase();
            var roleItems = document.querySelectorAll('.role-item');

            roleItems.forEach(function(item) {
                var roleText = item.textContent.toLowerCase();
                if (roleText.indexOf(searchText) === -1) {
                    item.style.display = 'none';
                } else {
                    item.style.display = 'block';
                }
            });
        });

        // تحديث أنماط البطاقات عند التحديد
        var checkboxes = document.querySelectorAll('.role-checkbox');
        checkboxes.forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                updateCardStyles();
            });
        });

        function updateCardStyles() {
            var cards = document.querySelectorAll('.role-card');
            cards.forEach(function(card) {
                card.classList.remove('border-success', 'bg-success-light');
            });

            var checkedCheckboxes = document.querySelectorAll('.role-checkbox:checked');
            checkedCheckboxes.forEach(function(checkbox) {
                var card = checkbox.closest('.role-card');
                if (card) {
                    card.classList.add('border-success', 'bg-success-light');
                }
            });
        }

        // التهيئة الأولية
        document.addEventListener('DOMContentLoaded', function() {
            updateCardStyles();
        });
    </script>

    <style>
        .role-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .role-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

            .role-card.border-success {
                border-width: 2px;
            }

        .bg-success-light {
            background-color: rgba(25, 135, 84, 0.05);
        }

        .form-check-label {
            cursor: pointer;
        }

        .role-name {
            font-size: 1.1em;
        }
    </style>
}