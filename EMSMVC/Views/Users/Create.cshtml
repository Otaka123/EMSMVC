@model RegisterViewModel
@using EMSMVC.ViewModels
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.Data
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card register-card">
                <div class="card-header">
                    <h2 class="mb-0">إنشاء حساب جديد</h2>
                    <p class="mb-0 mt-2 opacity-75">املأ النموذج أدناه للتسجيل</p>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">الاسم الأول</label>
                                <input asp-for="FirstName" class="form-control" placeholder="أدخل الاسم الأول" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">الاسم الأخير</label>
                                <input asp-for="LastName" class="form-control" placeholder="أدخل الاسم الأخير" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DOB" class="form-label">تاريخ الميلاد</label>
                                <input asp-for="DOB" class="form-control" type="date" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label">الجنس</label>
                                <select class="form-control gender-select" asp-for="Gender"
                                        asp-items="@(new SelectList(new[] { "Male", "Female", "Other" }))">
                                    <option value="">اختر الجنس</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                            <input asp-for="UserName" class="form-control" placeholder="أدخل اسم المستخدم" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                            <input asp-for="Email" class="form-control" placeholder="أدخل البريد الإلكتروني" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
                            <input asp-for="Phone" class="form-control" placeholder="أدخل رقم الهاتف" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">كلمة المرور</label>
                                <input asp-for="Password" class="form-control" placeholder="أدخل كلمة المرور" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="أعد إدخال كلمة المرور" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-register w-100 mt-3">تسجيل</button>

                        <div class="links-section">
                            @* <p class="mb-2">
                                هل لديك حساب بالفعل؟
                                <a asp-page="/User/Login" class="text-decoration-none">تسجيل الدخول</a>
                            </p> *@
                            <a asp-controller="Users" asp-action="Index" class="text-decoration-none">العودة للرئيسية</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    :root {
        --primary-color: #4e73df;
        --success-color: #1cc88a;
        --light-bg: #f8f9fc;
        --card-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 20px 0;
    }

    .register-card {
        border: none;
        border-radius: 10px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        max-width: 600px;
        margin: 0 auto;
    }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color), #2a5bd7);
        color: white;
        text-align: center;
        padding: 1.5rem;
        border-bottom: none;
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #5a5c69;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #d1d3e2;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

    .btn-register {
        background: linear-gradient(135deg, var(--success-color), #17a673);
        border: none;
        border-radius: 8px;
        padding: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s;
        color: white;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(28, 200, 138, 0.3);
            color: white;
        }

    .links-section {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e3e6f0;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .gender-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #d1d3e2;
    }

</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // إضافة بعض التفاعلية الإضافية
        document.addEventListener('DOMContentLoaded', function() {
            // إضافة تأثير للعناصر عند التركيز
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
        });
    </script>
}