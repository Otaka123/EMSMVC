    <style>
        :root {
            --sidebar-width: 250px;
            --header-height: 60px;
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #3498db;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar Styles */
        #sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            right: 0;
            background: var(--primary-color);
            transition: all 0.3s;
            z-index: 1000;
            box-shadow: 3px 0 10px rgba(0,0,0,0.1);
        }

            #sidebar.active {
                margin-right: -var(--sidebar-width);
            }

        .sidebar-header {
            padding: 20px;
            background: var(--secondary-color);
            text-align: center;
        }

            .sidebar-header h3 {
                color: white;
                margin: 0;
                font-size: 1.5rem;
            }

        .sidebar-menu {
            padding: 20px 0;
        }

            .sidebar-menu ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .sidebar-menu li {
                position: relative;
            }

            .sidebar-menu a {
                display: block;
                padding: 12px 20px;
                color: #b8c7ce;
                text-decoration: none;
                transition: all 0.3s;
                border-right: 3px solid transparent;
            }

                .sidebar-menu a:hover {
                    color: white;
                    background: rgba(255,255,255,0.1);
                    border-right-color: var(--accent-color);
                }

                .sidebar-menu a.active {
                    color: white;
                    background: rgba(255,255,255,0.1);
                    border-right-color: var(--accent-color);
                }

            .sidebar-menu .fa {
                margin-left: 10px;
                width: 20px;
                text-align: center;
            }

        .submenu {
            display: none;
            background: rgba(0,0,0,0.2);
        }

            .submenu.show {
                display: block;
            }

            .submenu a {
                padding-right: 40px;
                font-size: 0.9em;
            }

        /* Main Content */
        #content {
            width: calc(100% - var(--sidebar-width));
            margin-right: var(--sidebar-width);
            transition: all 0.3s;
        }

            #content.active {
                width: 100%;
                margin-right: 0;
            }

        /* Header */
        .navbar {
            height: var(--header-height);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        /* Cards */
        .dashboard-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s;
            margin-bottom: 20px;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }

        .stat-card {
            text-align: center;
            padding: 20px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 10px 0;
        }

        .stat-icon {
            font-size: 3rem;
            opacity: 0.7;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar {
                margin-right: -var(--sidebar-width);
            }

                #sidebar.active {
                    margin-right: 0;
                }

            #content {
                width: 100%;
                margin-right: 0;
            }

                #content.active {
                    width: calc(100% - var(--sidebar-width));
                    margin-right: var(--sidebar-width);
                }
        }

        /* Custom Colors */
        .bg-primary {
            background: var(--primary-color) !important;
        }

        .bg-secondary {
            background: var(--secondary-color) !important;
        }

        .text-accent {
            color: var(--accent-color) !important;
        }

        /* Badges */
        .badge {
            font-size: 0.7em;
            padding: 4px 8px;
        }
    </style>
</head>
