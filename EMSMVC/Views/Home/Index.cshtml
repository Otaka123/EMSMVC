        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- عناصر القائمة -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home me-1"></i>الرئيسية
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#features">
                        <i class="fas fa-star me-1"></i>المميزات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#about">
                        <i class="fas fa-info-circle me-1"></i>عن النظام
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact">
                        <i class="fas fa-envelope me-1"></i>اتصل بنا
                    </a>
                </li>
            </ul>

            <!-- عناصر تسجيل الدخول/التسجيل -->
            <ul class="navbar-nav ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- إذا كان المستخدم مسجل الدخول -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>مرحبا
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-action="Edit" asp-controller="Users" asp-route-id="@User.FindFirst("sub")?.Value">
                                    <i class="fas fa-user me-2"></i>الملف الشخصي
                                </a>
                            </li>
                            @* <li>
                                <a class="dropdown-item" href="@Url.Action("Settings", "User")">
                                    <i class="fas fa-cog me-2"></i>الإعدادات
                                </a>
                            </li> *@
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Users" asp-action="signout" method="post" id="logoutForm">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>تسجيل الخروج
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <!-- إذا لم يكن المستخدم مسجل الدخول -->
                    <li class="nav-item">
                        <a  asp-controller="Users" asp-action="Login" class="nav-link">
                            <i class="fas fa-sign-in-alt me-1"></i> تسجيل الدخول
                        </a>


                    </li>
                    @* <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm ms-2" href="@Url.Action("Register", "User")">
                            <i class="fas fa-user-plus me-1"></i>إنشاء حساب
                        </a>
                    </li> *@
                }
            </ul>
        </div>
    </div>
</nav>

